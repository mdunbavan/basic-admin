<h1>
  Details for user <%= @user.name %>
  <% if @user == current_user %>
    <small>(That's you!)</small>
  <% end %>
</h1>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @user.name %></dd>

  <dt>Email</dt>
  <dd><%= @user.email %></dd>

  <dt>Admin User?</dt>
  <dd><%= @user.is_admin? ? "Yes" : "No" %></dd>
</dl>

<%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-primary" %>
<%= link_to "Delete", admin_user_path(@user), class: "btn btn-danger", method: :delete, confirm: "Are you sure you want to delete this user" unless @user == current_user %>