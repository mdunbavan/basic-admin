<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= simple_form_for resource,
                    as: resource_name,
                    url: registration_path(resource_name),
                    html: { method: :put, role: "form", class: "form-horizontal col-sm-4" } do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, :required => true, :autofocus => true, input_html: { class: "form-control"} %>
  <%= f.input :email, :required => true, input_html: { class: "form-control"} %>
  <%= f.input :current_password, :required => true, input_html: { class: "form-control"} %>

  <%= f.input :password, :autocomplete => "off", :hint => "Leave blank if you don't want to change it", :required => false, input_html: { class: "form-control"} %>
  <%= f.input :password_confirmation, :required => false, input_html: { class: "form-control"} %>

  <%= f.button :submit, "Update", class: "btn btn-primary" %>

<% end %>