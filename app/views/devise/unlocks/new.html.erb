<h1>Resend unlock instructions</h1>

<div class="row">
  <%= simple_form_for resource,
                      :as => resource_name,
                      :url => unlock_path(resource_name),
                      :html => { :method => :post, role: "form", class: "form-horizontal col-sm-4" }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>

    <%= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control"} %>
    <%= f.button :submit, "Resend unlock instructions", class: "btn btn-primary" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>