<h2>Forgot your password?</h2>

<div class="row">
  <%= simple_form_for resource,
                      :as => resource_name,
                      :url => password_path(resource_name),
                      :html => { :method => :post, role: "form", class: "form-horizontal col-sm-4" } do |f| %>
    <%= f.error_notification %>


    <%= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control"} %>
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>